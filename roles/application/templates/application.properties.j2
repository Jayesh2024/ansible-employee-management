# Server Configuration
server.port=8081

# Spring DataSource Configuration - Connect to remote PostgreSQL
# spring.datasource.url=jdbc:postgresql://{{ hostvars[groups['db_servers'][0]]['ansible_host'] }}:5432/{{ db_name }}
spring.datasource.username={{ db_user }}
spring.datasource.password={{ db_password }}
spring.datasource.driver-class-name=org.postgresql.Driver

# Connection Pool Settings - optimized for t2.micro
spring.datasource.hikari.maximum-pool-size=5
spring.datasource.hikari.minimum-idle=2
spring.datasource.hikari.idle-timeout=30000

# JPA/Hibernate Configuration
spring.jpa.hibernate.ddl-auto=update
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.show-sql=false

# Logging Configuration
logging.level.root=INFO
logging.level.org.springframework=INFO
logging.level.com.employee=DEBUG
logging.file.name={{ app_log_dir }}/employee-app.log

# Management/Actuator Endpoints
management.endpoints.web.exposure.include=health,info,metrics
management.endpoint.health.show-details=always

